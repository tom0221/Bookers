<h1>Books</h1>
<table>
 <tr>
  <th class="title-text">Title</th>
  <th class="title-text">Body</th>
 </tr>

 <% @books.each do |book| %>

 <tr>
  <td class="title-text"><%= book.title %></td>
  <td class="title-text"><%= book.body %></td>
  <td class="title-text">


    <%= link_to "Show", "/books/#{book.id}" %></a>
    <%= link_to "Edit", edit_book_path(book) %>
    <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>



  </td>
 </tr>

 <% end %>
</table>


<h1>New Book</h1>

 <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
 <% end %>

 <%= form_for(@book) do |f| %>
 <% if @book.errors.any? %>
      <p>error</p>
  <div class="alert alert-warning">
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
  </div>
 <% end %>


 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit'Create Book' %>

 <% end %>
